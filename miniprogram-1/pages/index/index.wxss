/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 30px;
  color:black;
}

.section {
  border: 1px solid #aaa; 
  BACKGROUND-COLOR: transparent;
  color:black;
}

.nobordersection {
  border-bottom: 1px solid #dbdbdb;
  border-top:0px;
  border-left:0px;
  border-right:0px;
  BACKGROUND-COLOR: transparent;
  color:black;
  text-align: center;
}

.btn1 {
  width: 80%;
  margin-top: 40rpx;
  background-color: rgba(47,172,255,0.5);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn1btnative {
  width: 80%;
  margin-top: 40rpx;
  background-color: #2facff;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.reset {
  width: 20%;
  margin-top: 10rpx;
  margin-right: 3%;
  font-size: 12px;
  background-color: #2facff;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.placeholder{
  color: gray;
  font-size: 12px;
  text-align: left;
}

.radio-group{
  margin-top: 5px;
}

.radio-group .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
 
/* 选中后的样式 （可根据设计稿需求自己修改） */
.radio-group .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; /* 对勾大小 26rpx */
    color:#fff; /* 对勾颜色 */
    background: #2facff;
    border-color: #2facff;
}

.flex-wrp{
  display: flex;
  flex-direction: row;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.textdisplay{
  font-size: 12px;
}

.radio-display{
  margin-top: 5px;
  font-size: 20px;
}

.hintdisplay{
  color: red;
  text-align: left;
  font-size: 10px;
  /* text-indent: 14px,40%; */
  width: 200px;
}

.img{
  opacity: 0.5;
}

.icon{
  opacity: 0.75;
}

.result-left{
  align-items: left;
}

.columnwidth{
  width: 80px;
  text-align: left;
}

.pricewidth{
  width: 180px;
  text-align: right;
}

.priceunitwidth{
  width: 30px;
  text-align: center;
}

.container{
  padding: 40rpx;
}

.btn {
  width: 100%;
}

.detail {
  width: 100%;
  height: 40px;
  line-height: center;
  text-align: center;
  color: #fff;
  background: #000;
  position: fixed;
  bottom: 0;
}